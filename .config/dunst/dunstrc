[global]
    monitor = 0
    follow = mouse

    # The geometry of the window: [{width}]x{height}[+/-{x}+/-{y}]
    geometry = "350x5-15+50"

    indicate_hidden = yes
    separator_height = 2
    padding = 10
    horizontal_padding = 10
    frame_width = 2
    frame_color = "#94FBAB"
    separator_color = frame
    sort = no
    idle_threshold = 120
    font = DejaVu Sans Mono 11
    line_height = 1.5

    # http://developer.gnome.org/pango/stable/PangoMarkupFormat.html
    markup = yes
    format = "<span foreground="white">%s</span>\n%b"

    alignment = center
    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    icon_position = off
    max_icon_size = 16
    icon_path = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/

    sticky_history = yes
    history_length = 15

    dmenu = /usr/bin/rofi -dmenu -p dunst
    browser = /usr/bin/firefox -new-tab

    always_run_script = true
    title = Dunst
    class = Dunst

[shortcuts]
    close = mod1+space
    close_all = ctrl+mod1+space
    history = mod1+period
    context = ctrl+mod1+period

[urgency_low]
  background = "#3F3F3F"
  foreground = "#98F5FF"
  frame_color = "#00FFFF"
  timeout = 4

[urgency_normal]
  background = "#2E3436"
